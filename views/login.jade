extends ran

block content
  h1 Register
  p Please Register using the form below
  form(method="post",action="/users/login")
    .form-group
      label Name
      input.form-control(name="username",type="text",placeholder="type your name")
    .form-group
      label Name
      input.form-control(name="password",type="password",placeholder="type your mail")
    input.btn.btn-default(name='submit',type="submit",value="Login")